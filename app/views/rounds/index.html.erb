<h1>Listing rounds</h1>

<table cellspacing="0">
  <tr>
    <th>ID</th>
    <th>Word</th>
    <th>Status</th>
    <th>Successful Algorithms</th>
    <th>Failed Algorithms</th>
  </tr>

<% @rounds.each do |round| %>
  <tr>
    <td><%=h round.id %></td>
    <td><%=h round.word %></td>
    <td><%=h round.finished ? "Finished" : "Running Iter #{round.iterations}" %></td>
    <td><%=h round.entries.won.size %></td>
    <td><%=h round.entries.lost.size %></td>
    <td><%= link_to 'Show', round %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Latest round", round_path("latest") %>
<br />
<%= link_to "Algorithms", algorithms_path %>
